<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/jdbc 
		http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd">

	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host">
			<value>${cfg.mail.host}</value>
		</property>
		<property name="port">
			<value>${cfg.mail.port}</value>
		</property>
		<property name="protocol">
			<value>${cfg.mail.protocol}</value>
		</property>
		<property name="username">
			<value>${cfg.mail.username}</value>
		</property>
		<property name="password">
			<value>${cfg.mail.password}</value>
		</property>
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">${cfg.mail.smtp.auth}</prop>
				<prop key="mail.smtp.starttls.enable">${cfg.mail.smtp.starttls.enable}</prop>
				<prop key="mail.smtp.quitwait">${cfg.mail.smtp.quitwait}</prop>
				<prop key="mail.debug">false</prop>
			</props>
		</property>
	</bean>


	<bean id="from" class="java.lang.String">
		<constructor-arg value="${cfg.mail.from}" />
	</bean>


</beans>